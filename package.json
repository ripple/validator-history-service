    "@eslint/js": "^9.32.0",
    "@types/axios": "^0.14.0",
    "@types/express": "4.17.21",
    "@types/jest": "^26.0.19",
    "@types/nconf": "^0.10.0",
    "@types/node": "^20.17.30",
    "@types/ws": "^8.5.5",
